#!/bin/bash


function dia()
{
    exec 3>&1
    DRET=$(dialog "$@" 2>&1 1>&3)
    exec 3>&-
}

function setup()
{
    #TODO check for tmux
    export TERM=tmux
    if [ -z $TMUX ] ; then
        echo "You need to run the Connection Manager inside TMux, lemme start it for you"
        tmux new-session -n "CM" "$0 $*"
        exit $?
    fi
}

function main()
{
    setup
    dia --menu "CM" 100 100 100 "1" "Connect to the network"
    case $DRET in
        1) echo "Connect to the Internet woo hoo"
           read
            ;;
    esac
}

main
